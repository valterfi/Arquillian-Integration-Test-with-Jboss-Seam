<jboss:ejb-jar 
    xmlns:jboss="http://www.jboss.com/xml/ns/javaee" 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss-ejb3-2_0.xsd
                        http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
    xmlns:jee="http://java.sun.com/xml/ns/javaee"
    xmlns:c="urn:clustering:1.0"
    version="3.0"
    impl-version="2.0">
 
    <jee:assembly-descriptor>
        <c:clustering>
            <jee:ejb-name>BookingListAction</jee:ejb-name>
            <c:clustered>true</c:clustered>
        </c:clustering>

        <c:clustering>
            <jee:ejb-name>HotelBookingAction</jee:ejb-name>
            <c:clustered>true</c:clustered>
        </c:clustering>

        <c:clustering>
            <jee:ejb-name>HotelSearchingAction</jee:ejb-name>
            <c:clustered>true</c:clustered>
        </c:clustering>
    </jee:assembly-descriptor>
</jboss:ejb-jar>
